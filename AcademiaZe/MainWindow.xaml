<Window x:Class="AcademiaZe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademiaZe"
        xmlns:resources="clr-namespace:AcademiaZe.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="383*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="0" Background="#FFFFCC01" Height="48" VerticalAlignment="Top" Grid.ColumnSpan="14" Grid.RowSpan="2">
            <Label Content="SEU ZÉ" HorizontalAlignment="Left" Margin="10,-3,0,19" FontFamily="Segoe UI Black" FontSize="20"/>
        </Border>
        <Label Content="FIT CLUB" HorizontalAlignment="Left" Margin="8,19,0,0" Foreground="White" FontFamily="Segoe UI Black" FontSize="10" Grid.Column="1" Width="54" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="TxtHome" Content="{Binding Path=(resources:Idioma.TxtHome)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="7,12,7,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="2" Click="ButtonHome_Click" Grid.Row="1" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="TxtLogradouro" Content="{Binding Path=(resources:Idioma.TxtLogradouro)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="0,12,5,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="10" Click="ButtonLogradouro_Click" Grid.Row="1" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="TxtAluno" Content="{Binding Path=(resources:Idioma.TxtAluno)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="5,12,5,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="4" Grid.Row="1" Height="23" VerticalAlignment="Top" Click="ButtonAluno_Click"/>
        <Button x:Name="TxtColaborador" Content="{Binding Path=(resources:Idioma.TxtColaborador)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="3,12,3,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="3" Grid.Row="1" Click="ButtonColaborador_Click" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="TxtSenha" Content="{Binding Path=(resources:Idioma.TxtSenha)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="0,12,4,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="11" Click="ButtonSenha_Click" Grid.Row="1" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="TxtMatricula" Content="{Binding Path=(resources:Idioma.TxtMatricula)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="0,12,2,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="5" Grid.Row="1" Height="23" VerticalAlignment="Top" Click="ButtonMatricula_Click"/>
        <Button x:Name="TxtAvaliacao" Content="{Binding Path=(resources:Idioma.TxtAvaliacao)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="5,12,5,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="7" Grid.Row="1" Height="23" VerticalAlignment="Top" Click="ButtonAvaliacao_Click"/>
        <Button x:Name="TxtFrequencia" Content="{x:Static resources:Idioma.TxtFrequencia}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="5,12,5,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="6" Grid.Row="1" Height="23" VerticalAlignment="Top" Click="ButtonFrequencia_Click"/>
        <Button x:Name="TxtAulas" Content="{Binding Path=(resources:Idioma.TxtAulas)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="5,12,6,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="8" Grid.Row="1" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="TxtTreinos" Content="{Binding Path=(resources:Idioma.TxtTreinos)}" FontFamily="Segoe UI Semibold" FontSize="11" Margin="1,12,5,0" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="9" Grid.Row="1" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="TxtLoginLogoff" Content="{Binding Path=(resources:Idioma.TxtLoginLogoff)}" FontFamily="Segoe UI Semibold" FontSize="11" Background="#FFFFCC00" Foreground="White" BorderBrush="{x:Null}" Grid.Column="12" Grid.Row="1" Height="23" VerticalAlignment="Top" Margin="0,12,0,0" Click="ButtonLoginLogoff_Click"/>
        <Frame x:Name="framePrincipal" Content="" Grid.ColumnSpan="14" ScrollViewer.VerticalScrollBarVisibility="Disabled" NavigationUIVisibility="Hidden" Grid.Row="2" Margin="0,2,0,0"/>
        <Button x:Name="Ingles" Grid.Column="13" Content="en-US" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Height="12" Width="34" Click="ButtonIngles_Click" FontSize="6"/>
        <Button x:Name="Espanhol" Grid.Column="13" Content="es-ES" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Height="12" Width="34" Click="ButtonEspanhol_Click" FontSize="6" Margin="0,15,0,0"/>
        <Button x:Name="Portugues" Grid.Column="13" Content="pt-BR" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Top" Height="12" Width="34" Click="ButtonPortugues_Click" FontSize="6" Margin="0,31,0,0"/>

    </Grid>
</Window>
